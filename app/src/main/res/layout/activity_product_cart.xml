<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductCart"
    android:background="#ffebcc">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff9800"
        app:title="My Cart"
        app:titleTextColor="#FFFFFF" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="200dp"
        android:scrollbars="vertical" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="550dp">

                <Button
                    android:id="@+id/btn_cartsubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="116dp"
                    android:layout_marginLeft="116dp"
                    android:layout_marginEnd="124dp"
                    android:layout_marginRight="124dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/btn_cartsubmit"
                    app:backgroundTint="#ff9800" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="144dp"
                    android:layout_height="38dp"
                    android:layout_above="@+id/btn_cartsubmit"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="29dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="59dp"
                    android:layout_toStartOf="@+id/tv_subtot"
                    android:layout_toLeftOf="@+id/tv_subtot"
                    android:background="#ff9800"
                    android:gravity="center"
                    android:text="@string/txt_subtot"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_subtot"
                    android:layout_width="143dp"
                    android:layout_height="38dp"
                    android:layout_above="@+id/btn_cartsubmit"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="66dp"
                    android:layout_marginRight="66dp"
                    android:layout_marginBottom="59dp"
                    android:background="@color/white"
                    android:gravity="center" />
            </RelativeLayout>



</RelativeLayout>